app GroupFSM {

    // Message types used in the app
    message Msg;

    group TheGroup with leader using Msg
      heartbeat = 1000,
      electionMin = 1500,
      electionMax = 2000, 
      peerTimeout = 3000,
      consensusTimeout = 1500;

    //-------------------
    //  Components
    //-------------------

    component Member(uid) {
      timer clock 1000 msec;
    }

    //-------------------
    //  Actors
    //-------------------
    actor Group_ACTOR(uid="") {
       {
          member : Member(uid=uid);
       }
    }
}
