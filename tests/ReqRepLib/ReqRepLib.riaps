// RIAPS Client Server 

app ReqRepLib {
    message CltReq; 
    message SrvRep;

	library ReqRep; 
	     
    // Client
    component Requestor {
    	req cltReqPort : (CltReq,SrvRep); 
    	timer clock 1000;
    }
    
    // Server
    component Replier {
    	rep srvRepPort : (CltReq, SrvRep);
    }
    
    actor ReqActor {
    	{ 
    		requestor : Requestor;
    	}
    }
    
    actor RepActor {
    	{
    		replier : Replier;
    	}
    }
    
}
