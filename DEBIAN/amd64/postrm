mkdir -p /etc/riaps
for i in `ls /usr/local/riaps/etc`; do rm -f /etc/riaps/$i ;done
rmdir /etc/riaps || true

pip3 uninstall -y riaps-pycom || true
echo "the following python3 packages rpyc pydevd pyzmq textX redis hiredis pycapnp netifaces paramiko cryptography pyserial minimalmodbus were automatically installed and can now be removed."
echo "You can run sudo pip3 uninstall rpyc pydevd pyzmq textX redis hiredis pycapnp netifaces paramiko cryptography pyserial minimalmodbus"


