mkdir -p /etc/riaps
for i in `ls /usr/local/riaps/etc`; do rm -f /etc/riaps/$i ;done
rmdir /etc/riaps || true

pip3 uninstall -y riaps-pycom || true
echo "the following python3 packages rpyc pydevd pyzmq redis hiredis pycapnp netifaces paramiko cryptography Adafruit_BBIO minimalmodbus pyserial were automatically installed and can now be removed."
echo "You can run  sudo pip3 uninstall rpyc pydevd pyzmq redis hiredis pycapnp netifaces paramiko cryptography Adafruit_BBIO minimalmodbus pyserial"

rm -f /usr/local/bin/riaps_disco_redis
